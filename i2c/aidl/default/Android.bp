cc_binary {
    name: "android.hardware.rpi.i2c-service",
    vendor: true,
    relative_install_path: "hw",
    init_rc: ["android.hardware.rpi.i2c-service.rc"],
    vintf_fragments: ["android.hardware.rpi.i2c-service.xml"],

    srcs: [
        "II2c.cpp",
        "service.cpp",
    ],

    cflags: [
        "-Wall",
        "-Werror",
    ],

    shared_libs: [
        "libbase",
        "liblog",
        "libhardware",
        "libbinder_ndk",
        "libbinder",
        "libutils",
        "android.hardware.rpi.i2c-V1-ndk",
    ],
}
